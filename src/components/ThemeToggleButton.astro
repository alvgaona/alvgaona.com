---
import { MoonIcon, SunIcon } from '@heroicons/react/24/solid';
---

<div
  class="inline-flex items-center rounded-3xl bg-orange-200 p-[1px] dark:bg-dusty-gray"
>
  <button id="theme-btn" arial-label="auto" class="flex items-center">
    <div
      class="cursor-pointer rounded-3xl bg-white p-2 text-black dark:bg-dusty-gray dark:text-white"
    >
      <SunIcon className="h-5 w-5" />
    </div>
    <div class="cursor-pointer rounded-3xl p-2 text-black dark:bg-white">
      <MoonIcon className="h-5 w-5" />
    </div>
  </button>
</div>
