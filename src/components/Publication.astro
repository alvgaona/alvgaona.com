---
import { ArrowRightIcon } from '@heroicons/react/24/solid';

export interface Props {
    title: string;
    reference: string;
    article?: string;
    video?: string;
    poster?: string;
}

ArrowRightIcon;

const { title, reference, article, video, poster } = Astro.props;
---

<div class="flex flex-col">
    <p id="hss" class="text-b-gray-200 text-[17px] inline font-bold font-antonia">
        &bdquo;{title}&ldquo;
    </p>
    <p class="text-justify text-[16px]">{reference}</p>
    <div class="flex items-center gap-3 text-spectral-blue">
        {
            article && (
                <a
                    href={article}
                    class="transform pt-4 hover:underline decoration-2 underline-offset-4 transition duration-200 hover:-translate-y-1"
                >
                    <span class="flex items-center gap-1 text-[16px]"> Article</span>
                </a>
            )
        }

        {
            poster && (
                <a
                    href={poster}
                    class="transform pt-4 hover:underline decoration-2 underline-offset-4 transition duration-200 hover:-translate-y-1"
                >
                    <span class="flex items-center gap-1 text-[16px]"> Poster</span>
                </a>
            )
        }

        {
            video && (
                <a
                    href={video}
                    class="transform pt-4 hover:underline decoration-2 underline-offset-4 transition duration-200 hover:-translate-y-1"
                >
                    <span class="flex items-center gap-1 text-[16px]"> Video</span>
                </a>
            )
        }
    </div>
</div>
