---
import 'katex/dist/katex.min.css';
import Layout from './Layout.astro';

const { frontmatter } = Astro.props;
---

<style>
    .breadcrumbs ul {
        display: flex;
        align-items: center;
        gap: 0.5rem;
        list-style: none;
        padding: 0;
        margin: 0;
    }

    .breadcrumbs li:not(:last-child)::after {
        content: "/";
        margin-left: 0.5rem;
        opacity: 0.5;
    }

    .breadcrumbs a {
        text-decoration: none;
        opacity: 0.7;
        transition: opacity 0.2s;
    }

    .breadcrumbs a:hover {
        opacity: 1;
    }
</style>

<Layout
    meta={{
        title: frontmatter.title,
        ogImage: frontmatter.ogImage,
        description: frontmatter.description,
        articleDate: frontmatter.pubDate.toISOString(),
    }}
>
    <main class="mx-auto max-w-4xl pb-12 pt-[56px]">
        <div class="mt-4 flex items-center justify-between px-6 lg:px-0">
            <div class="breadcrumbs text-lg">
                <ul>
                    <li><a href="/">Home</a></li>
                    <li>{frontmatter.title}</li>
                </ul>
            </div>
            <span class="text-lg font-thin">
                Published on
                {
                    frontmatter.pubDate.toLocaleString("default", {
                        month: "long",
                        year: "numeric",
                        day: "numeric",
                    })
                }
            </span>
        </div>
        <article class="mx-auto max-w-4xl px-24 font-antonia-body">
            <slot />
        </article>
    </main>
</Layout>
