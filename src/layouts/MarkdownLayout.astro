---
import 'katex/dist/katex.min.css';
import Layout from './Layout.astro';

const { frontmatter } = Astro.props;
---

<style>
    /* Override DaisyUI breadcrumbs with custom styling */
    .breadcrumbs ul {
        display: flex !important;
        align-items: center !important;
        gap: 0.5rem !important;
        list-style: none !important;
        padding: 0 !important;
        margin: 0 !important;
    }

    .breadcrumbs li {
        display: flex !important;
        align-items: center !important;
    }

    /* Remove DaisyUI's default separator and add custom one */
    .breadcrumbs li::before {
        content: none !important;
    }

    .breadcrumbs li + li::before {
        content: "/" !important;
        margin-inline: 0.5rem !important;
        opacity: 0.5 !important;
    }

    .breadcrumbs a {
        text-decoration: none !important;
        opacity: 0.7 !important;
        transition: opacity 0.2s !important;
    }

    .breadcrumbs a:hover {
        opacity: 1 !important;
    }
</style>

<Layout
    meta={{
        title: frontmatter.title,
        ogImage: frontmatter.ogImage,
        description: frontmatter.description,
        articleDate: frontmatter.pubDate.toISOString(),
    }}
>
    <main class="mx-auto max-w-4xl pb-12 pt-[56px]">
        <div class="mt-4 flex items-center justify-between px-6 lg:px-0">
            <div class="breadcrumbs text-lg">
                <ul>
                    <li><a href="/">Home</a></li>
                    <li>{frontmatter.title}</li>
                </ul>
            </div>
            <span class="text-lg font-thin">
                Published on
                {
                    frontmatter.pubDate.toLocaleString("default", {
                        month: "long",
                        year: "numeric",
                        day: "numeric",
                    })
                }
            </span>
        </div>
        <article class="mx-auto max-w-4xl px-24 font-antonia-body">
            <slot />
        </article>
    </main>
</Layout>
