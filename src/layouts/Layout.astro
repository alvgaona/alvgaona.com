---
import "@/styles/globals.css";
import Footer from "@/components/Footer.astro";
import AnimatedLayout from "@/components/AnimatedLayout.astro";
import { Toaster } from "@/components/ui/sonner";
import siteMeta from "@/site-meta";

import SpeedInsights from "@vercel/speed-insights/astro";

const { meta } = Astro.props;

const siteTitle = `${meta.title} â€¢ ${siteMeta.title}`;
const canonicalUrl = new URL(Astro.url.pathname, Astro.site);
const socialImageUrl = new URL(meta?.ogImage ? meta.ogImage : "/social-card.webp", Astro.url).href;
---

<!doctype html>
<html lang={siteMeta.lang}>
    <head>
        <meta charset="utf-8" />
        <meta name="description" content={meta.description} />
        <meta name="viewport" content="width=device-width" />
        <meta name="generator" content={Astro.generator} />

        <!-- Open Graph / Facebook -->
        <meta property="og:type" content={meta?.articleDate ? "article" : "website"} />
        <meta property="og:title" content={meta.title} />
        <meta property="og:description" content={meta.description} />
        <meta property="og:url" content={canonicalUrl} />
        <meta property="og:site_name" content={siteMeta.title} />
        <meta property="og:locale" content={siteMeta.ogLocale} />
        <meta property="og:description" content={meta.description} />
        <meta property="og:image" content={socialImageUrl} />
        <meta property="og:image:width" content="1200" />
        <meta property="og:image:height" content="630" />
        {
            meta?.articleDate && (
                <>
                    <meta property="article:author" content={siteMeta.author} />
                    <meta property="article:published_time" content={meta.articleDate} />
                </>
            )
        }

        <!-- Twitter -->
        <meta property="twitter:card" content="summary_large_image" />
        <meta property="twitter:url" content={canonicalUrl} />
        <meta property="twitter:title" content={meta.title} />
        <meta property="twitter:description" content={meta.description} />
        <meta property="twitter:image" content={socialImageUrl} />

        <title>{siteTitle}</title>

        <!-- RSS auto-discovery -->
        <link rel="alternate" type="application/rss+xml" title={siteMeta.title} href="/rss.xml" />

        <!-- Preload critical fonts -->
        <link rel="preload" href="/fonts/Antonia-400-Regular.woff2" as="font" type="font/woff2" crossorigin="anonymous" />
        <link
            rel="preload"
            href="/fonts/AntoniaBody-400-Regular.woff2"
            as="font"
            type="font/woff2"
            crossorigin="anonymous"
        />

        <!-- Minimal inline theme script to prevent FOUC -->
        <script is:inline>
            const theme = localStorage.getItem('theme') || (window.matchMedia('(prefers-color-scheme: dark)').matches ? 'dark' : 'light');
            if (theme === 'dark' || (theme !== 'light' && !window.location.href.includes('/posts'))) {
                document.documentElement.classList.add('dark');
            }
        </script>
        <link rel="icon" type="image/png" href="/favicon.png" />

        <!-- Structured Data -->
        <script type="application/ld+json">
            {
                "@context": "https://schema.org",
                "@type": meta?.articleDate ? "BlogPosting" : "WebSite",
                "name": meta.title,
                "description": meta.description,
                "url": canonicalUrl,
                ...(meta?.articleDate && {
                    "headline": meta.title,
                    "datePublished": meta.articleDate,
                    "author": {
                        "@type": "Person",
                        "name": siteMeta.author,
                        "url": "https://alvgaona.com"
                    },
                    "image": socialImageUrl,
                    "publisher": {
                        "@type": "Person",
                        "name": siteMeta.author,
                        "url": "https://alvgaona.com"
                    }
                })
            }
        </script>

        <SpeedInsights />
    </head>
    <body class="bg-default-light text-black">
        <>
            <AnimatedLayout>
                <slot />
                <Toaster
                    client:idle
                    toastOptions={{
                        unstyled: true,
                        className: "border-[1px] border-black shadow shadow-black rounded-md",
                        classNames: {
                            toast: "bg-default-light",
                            title: "text-xs pr-24 py-3 pl-4 w-full",
                        },
                    }}
                />
            </AnimatedLayout>
            <Footer />
        </>
        <script is:inline>
            // Theme toggle functionality
            let themeValue = localStorage.getItem('theme') || (window.matchMedia('(prefers-color-scheme: dark)').matches ? 'dark' : 'light');

            function setPreference() {
                localStorage.setItem('theme', themeValue);
                reflectPreference();
            }

            function reflectPreference() {
                if (themeValue === 'light' && window.location.href.includes('/posts')) {
                    document.documentElement.classList.remove('dark');
                } else if (themeValue === 'dark' || !window.location.href.includes('/posts')) {
                    document.documentElement.classList.add('dark');
                }
                document.querySelector('#theme-btn')?.setAttribute('data-theme', themeValue);
            }

            // Set up theme toggle button listener
            document.querySelector('#theme-btn')?.addEventListener('click', () => {
                themeValue = themeValue === 'light' ? 'dark' : 'light';
                setPreference();
            });

            // Sync with system changes
            window.matchMedia('(prefers-color-scheme: dark)').addEventListener('change', ({ matches: isDark }) => {
                themeValue = isDark ? 'dark' : 'light';
                setPreference();
            });
        </script>
    </body>
</html>
