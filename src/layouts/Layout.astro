---
import "@/styles/globals.css";
import "katex/dist/katex.min.css";
import Footer from "@/components/Footer.astro";
import AnimatedLayout from "@/components/AnimatedLayout";
import { Toaster } from "@/components/ui/sonner";
import { Grain } from "@/components/Grain";
import siteMeta from "@/site-meta";

import SpeedInsights from "@vercel/speed-insights/astro";

const { meta } = Astro.props;

const siteTitle = `${meta.title} â€¢ ${siteMeta.title}`;
const canonicalUrl = new URL(Astro.url.pathname, Astro.site);
const socialImageUrl = new URL(meta?.ogImage ? meta.ogImage : "/social-card.png", Astro.url).href;
---

<!doctype html>
<html lang={siteMeta.lang}>
    <head>
        <meta charset="utf-8" />
        <meta name="description" content={meta.description} />
        <meta name="viewport" content="width=device-width" />
        <meta name="generator" content={Astro.generator} />

        <!-- Open Graph / Facebook -->
        <meta property="og:type" content={meta?.articleDate ? "article" : "website"} />
        <meta property="og:title" content={meta.title} />
        <meta property="og:description" content={meta.description} />
        <meta property="og:url" content={canonicalUrl} />
        <meta property="og:site_name" content={siteMeta.title} />
        <meta property="og:locale" content={siteMeta.ogLocale} />
        <meta property="og:description" content={meta.description} />
        <meta property="og:image" content={socialImageUrl} />
        <meta property="og:image:width" content="1200" />
        <meta property="og:image:height" content="630" />
        {
            meta?.articleDate && (
                <>
                    <meta property="article:author" content={siteMeta.author} />
                    <meta property="article:published_time" content={meta.articleDate} />
                </>
            )
        }

        <!-- Twitter -->
        <meta property="twitter:card" content="summary_large_image" />
        <meta property="twitter:url" content={canonicalUrl} />
        <meta property="twitter:title" content={meta.title} />
        <meta property="twitter:description" content={meta.description} />
        <meta property="twitter:image" content={socialImageUrl} />

        <title>{siteTitle}</title>

        <!-- RSS auto-discovery -->
        <link rel="alternate" type="application/rss+xml" title={siteMeta.title} href="/rss.xml" />

        <!-- Preload critical fonts -->
        <link rel="preload" href="/fonts/Antonia-400-Regular.otf" as="font" type="font/otf" crossorigin="anonymous" />
        <link
            rel="preload"
            href="/fonts/AntoniaBody-400-Regular.otf"
            as="font"
            type="font/otf"
            crossorigin="anonymous"
        />

        <script is:inline src="/toggle-theme.js"></script>
        <link rel="icon" type="image/png" href="/favicon.png" />
        <SpeedInsights />
    </head>
    <body class="bg-default-light text-black">
        <!-- <Grain client:load /> -->
        <>
            <AnimatedLayout client:idle>
                <slot />
                <Toaster
                    client:idle
                    toastOptions={{
                        unstyled: true,
                        className: "border-[1px] border-black shadow shadow-black rounded-md",
                        classNames: {
                            toast: "bg-default-light",
                            title: "text-xs pr-24 py-3 pl-4 w-full",
                        },
                    }}
                />
            </AnimatedLayout>
            <Footer />
        </>
    </body>
</html>
