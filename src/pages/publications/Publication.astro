---
import { ArrowRightIcon } from '@heroicons/react/24/solid';

export interface Props {
  title: string;
  reference: string;
  article?: string;
  video?: string;
  poster?: string;
}

ArrowRightIcon;

const { title, reference, article, video, poster } = Astro.props;
---

<div class="flex flex-col">
  <p id="hss" class="text-b-gray-200 font-dm-sans inline text-xl font-medium">
    {title}
  </p>
  <p class="text-justify">{reference}</p>
  <div class="flex items-center gap-3">
    {
      article && (
        <a
          href={article}
          class="transform pt-4 underline decoration-[#E76346] decoration-2 underline-offset-4 transition duration-200 hover:-translate-y-1"
        >
          <span class="flex items-center gap-1"> Article</span>
        </a>
      )
    }

    {
      poster && (
        <a
          href={poster}
          class="transform pt-4 underline decoration-[#E76346] decoration-2 underline-offset-4 transition duration-200 hover:-translate-y-1"
        >
          <span class="flex items-center gap-1"> Poster</span>
        </a>
      )
    }

    {
      video && (
        <a
          href={video}
          class="transform pt-4 underline decoration-[#E76346] decoration-2 underline-offset-4 transition duration-200 hover:-translate-y-1"
        >
          <span class="flex items-center gap-1"> Video</span>
        </a>
      )
    }
  </div>
</div>
