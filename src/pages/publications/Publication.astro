---
import { IoMdArrowForward } from 'react-icons/io';

export interface Props {
	title: string;
  reference: string;
  href: string;
}

const { title, reference, href } = Astro.props;
---

<div class="flex flex-col">
  <p id="hss" class="text-b-gray-200 inline font-mplus text-2xl font-semibold">
    {title}
  </p>
  <p class="text-justify">{reference}</p>
  <a
    href={href}
    class="transform pt-4 underline underline-offset-4 transition duration-200 hover:translate-x-1"
  >
    <span class="flex items-center">
      <IoMdArrowForward class="mr-1" /> Go to
    </span>
  </a>
</div>
